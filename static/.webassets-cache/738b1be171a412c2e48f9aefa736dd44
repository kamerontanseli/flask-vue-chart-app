Vvar ctx=document.querySelector("#myChart").getContext("2d");Vue.config.delimiters=['[[',']]'];var MainChart=new Chart(ctx,{type:"bar",data:{labels:["Test1","Test2"],datasets:[]},options:{responsive:true,scales:{yAxes:[{ticks:{beginAtZero:true}}]}}});var chart_parent=new Vue({el:"#chart_parent",data:{label:"# of Tests",data:[{label:"Test1",data:20,bck_color:"#000"},{label:"Test2",data:30,bck_color:"#ddd"}]},created:function(){this.update_chart();MainChart.update();},methods:{update_chart:function(){MainChart.data.labels=this.data.map(function(el){return el.label;});MainChart.data.datasets=[{label:this.label,data:this.data.map(function(el){return el.data;}),backgroundColor:this.data.map(function(el){return el.bck_color;})}];MainChart.update();},remove_data:function(index){this.data.splice(index,1);this.update_chart();},add_data:function(){this.data.push({label:"",data:0});this.update_chart();}}});
